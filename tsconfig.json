{
  "compilerOptions": {
    "outDir": "static/dist",
    "target": "es6",
    "declaration": false,
    "module": "es6",
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "typeRoots": ["./static/typings/mustache"]
  },
  "include": [
    "static/**/*"
  ],
  "exclude": [
    "test/index.spec.ts"
  ]
}
