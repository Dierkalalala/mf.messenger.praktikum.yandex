{
  "compilerOptions": {
    "target": "es6",
    "declaration": false,
    "module": "es6",
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "lib": ["es2017", "dom"]
  },
  "include": [
    "**/*"
  ]
}
